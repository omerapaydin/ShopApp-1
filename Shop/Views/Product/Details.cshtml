@model Product

<div class="card mb-3">
    <div class="container">
       <div class="row">
            <div class="col-md-3"> <img src="~/images/@Model.ImageUrl" alt="" class="card-img">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                    <a class="btn btn-lg btn-danger" asp-controller="Product" asp-action="List">Ürünlere Dön</a>
                </div>
            </div>
       </div>
    </div>
</div>